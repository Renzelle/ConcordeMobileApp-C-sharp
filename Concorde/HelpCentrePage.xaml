<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Concorde.HelpCentrePage"
             Shell.TabBarIsVisible="False"
             BackgroundColor="White">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#005acd" Offset="0.0" />
            <GradientStop Color="#005acd" Offset="0.2" />
            <GradientStop Color="#e0e0e0" Offset="0.7" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Grid>

        <!-- Scrollable Content -->
        <ScrollView>
            <VerticalStackLayout>

                <!-- Header with Gradient -->
                <Grid
                      Padding="20,15,20,15">
                    <!-- Reduced vertical padding -->
                    <Label Text="Help Centre"
                           FontSize="24"
                           TextColor="White"
                           FontAttributes="Bold" />
                </Grid>

                <!-- Page Content -->
                <VerticalStackLayout Padding="15">

                    <!-- Search Bar -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="10"
                           Padding="0">
                        <SearchBar x:Name="HelpSearchBar"
                                   Placeholder="Search for help topics..."
                                   BackgroundColor="Transparent"
                                   SearchCommand="{Binding SearchCommand}" />
                    </Frame>

                    <!-- Help Topics -->
                    <Label Text="Common Topics"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,10" />

                    <CollectionView ItemsSource="{Binding HelpTopics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="15"
                                       Margin="0,5"
                                       BackgroundColor="White"
                                       BorderColor="#E0E0E0"
                                       CornerRadius="15"
                                       HasShadow="True">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="{Binding Icon}"
                                               WidthRequest="30"
                                               HeightRequest="30"
                                               Margin="5" />
                                        <Label Text="{Binding Title}"
                                               FontSize="16"
                                               VerticalOptions="Center" />
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- FAQ Section (Accordion) -->
                    <Label Text="FAQs"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,15" />

                    <CollectionView ItemsSource="{Binding FAQs}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10"
                                       Margin="0,5"
                                       BackgroundColor="White"
                                       BorderColor="#E0E0E0"
                                       CornerRadius="10"
                                       HasShadow="False">
                                    <StackLayout>
                                        <Label Text="{Binding Question}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Answer}"
                                               FontSize="12"
                                               IsVisible="False"
                                               x:Name="AnswerLabel" />
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Contact Us Section -->
                    <Label Text="Need More Help?"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,15,0,5" />

                    <Button Text="Contact Support"
                            BackgroundColor="#005acd"
                            TextColor="White"
                            FontSize="16"
                            CornerRadius="10"
                            Clicked="OnContactSupportClicked" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Chatbot Button (Placed Above the ScrollView) -->
        <Button Text="ðŸ’¬"
                BackgroundColor="#CCCCFF"
                TextColor="White"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="25"
                Padding="5"
                FontSize="20"
                VerticalOptions="End"
                HorizontalOptions="End"
                Margin="20"
                Clicked="OnChatbotClicked" />
    </Grid>
</ContentPage>